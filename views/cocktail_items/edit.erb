<h2>Edit an Item: <%= @cocktail_items.product_name %></h2>

<form action="/cocktail-items/<%= @cocktail_items.id %>" method="post">
 <label for="product_name">Product Name:</label>
 <input type="text" name="product_name" id="product_name" value="<%= @cocktail_items.product_name %>">

 <label for="description">Product Description:</label>
 <input type="text" name="description" id="description" value="<%= @cocktail_items.description %>">

 <label for="quantity">Quantity:</label>
 <input type="number" name="quantity" id="quantity" value="<%= @cocktail_items.quantity %>">

 <label for="buy_cost">Purchase Cost:</label>
 <input type="number" name="buy_cost" id="buy_cost" value="<%= @cocktail_items.buy_cost %>">

 <label for="sell_price">Sell Price:</label>
 <input type="number" name="sell_price" id="sell_price" value="<%= @cocktail_items.sell_price %>">

 <label for="select_producer">Producer Name:</label>
  <select name="producer_id" id="select_producer">
    <% @producers.each do |producer| %>
    <% if producer.id == @cocktail_items.producer_id %>
      <option value=<%= producer.id %> selected><%= producer.producer_name.capitalize %></option>
    <% else %>
      <option value=<%= producer.id %>><%= producer.producer_name.capitalize %></option>
      <% end %>
    <% end %>
  </select>

  <input type="submit" value="Update Item">
</form>
